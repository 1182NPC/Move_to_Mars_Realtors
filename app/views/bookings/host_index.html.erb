<% host_bookings = [] %>
<div class="container">
  <div class="bookings-grid">

    <% @bookings.each do |booking| %>
      <% if booking.trip.user = current_user %>
        <%host_bookings << booking %>
      <% end %>
    <% end %>

    <% host_bookings.each do |booking| %>
      <div class="bookings-card">
      <div class="bookings-top-grid">
        <h2>Customer: <%=booking.user.email%></h2>
        <h4>Start date: <%= booking.start_date.strftime("%d %b %Y") %></h4>
        <h4>End date: <%= booking.end_date.strftime("%d %b %Y") %></h4>
      </div>
      <div class="booking-card-price-buttons">

        <div class="booking-info">
        <h3><%= booking.trip.name %></h3>
        <%= link_to "View trip details", trip_path(booking.trip)%>
        <p>Price per day: â‚¬<%=booking.trip.price %></p>
        </div>

        <div class="pending-link">
        <% if booking.pending? %>
          <%=link_to "Accept this booking", accept_path(booking), class:"btn btn-success"%>
          <%=link_to "Reject this booking", reject_path(booking), class:"btn btn-danger"%>
        <% elsif booking.accepted? %>
          <%=link_to "Reject this booking", reject_path(booking), class:"btn btn-danger"%>
        <% elsif booking.rejected? %>
          <%=link_to "Accept this booking", accept_path(booking), class:"btn btn-success"%>
        <% end%>
        </div>
      </div>
    </div>
      <% end %>

    <%= link_to 'Home', root_path %>
  </div>
</div>
